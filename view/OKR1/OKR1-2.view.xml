<mvc:View
	controllerName="sap.ui.app01.controller.OKR1.OKR1-2"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns:unified="sap.ui.unified"
  xmlns:t="sap.ui.table"
  xmlns="sap.m">
    <Page
      title="Datos MTD"
      id="SIMA02"
      showNavButton="true"
      navButtonPress="onNavBack">
    <headerContent>
        <Button icon="sap-icon://save" tooltip="Guardar" press="onSave" />
    </headerContent>
    <content>
        <Table 
        id="TableSIMA02"
        growing="true"
        growingThreshold="30"
        inset="false"
        items="{path: '/'}"
        alternateRowColors="true">
        <headerToolbar>
			<OverflowToolbar>
				<content>
					<ComboBox items="{path: 'cbxYear>/', templateShareable:false}" selectedKey="{/year}" width="20%" change="onYearChange" id="cbxYear">
                        <core:ListItem key="{cbxYear>description}" text="{cbxYear>description}"/>
                    </ComboBox>
				</content>
			</OverflowToolbar>
		</headerToolbar>
        <infoToolbar>
			<OverflowToolbar>
				<Label design="Bold" text="Promedio ( {/promedio} )"/>
			</OverflowToolbar>
		</infoToolbar>
            <columns>
                <Column>
                    <Text text="Mes"/>
                </Column>
                <Column hAlign="End">
                    <Text text="# Incidentes" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                    <ComboBox showSecondaryValues="true" items="{path: 'cbxMonth>/', templateShareable:false}" selectedKey="{month}" width="100%" enabled="false">
                        <core:ListItem key="{cbxMonth>code}" text="{cbxMonth>description}" additionalText="{cbxMonth>code}"/>
                    </ComboBox>
                    <Input value="{numero_incidentes}" type="Number" change="onChangeNumeroIncidentes"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>    
    </content>
    </Page>
</mvc:View>