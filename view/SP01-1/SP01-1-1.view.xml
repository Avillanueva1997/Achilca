<mvc:View
	controllerName="sap.ui.app01.controller.SP01-1.SP01-1-1"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns:u="sap.ui.unified"
  xmlns:t="sap.ui.table"
  xmlns="sap.m">
    <Page
      title="Cumplimiento de fecha de atención"
      showNavButton="true"
      navButtonPress="onNavBack"
      enableScrolling="true">
    <headerContent>
      <Button press="onAdd" tooltip="Añadir" icon="sap-icon://add"/>
      <Button press="onDelete" tooltip="Eliminar" icon="sap-icon://delete"/>
      <Button icon="sap-icon://save" tooltip="Guardar" press="onSave" />
    </headerContent>
    <content>
      <Table 
        id="TableSP01-1-1"
        growing="true"
        growingThreshold="30"
        inset="false"
        items="{path: '/'}"
        alternateRowColors="true"
        mode="MultiSelect">
        <columns>
          <Column width="5em">
            <Text text="Código"/>
          </Column>
           <Column>
            <Text text="Fecha Real"/>
          </Column>
           <Column>
            <Text text="Fecha Proyectada"/>
          </Column>
          <Column hAlign="End">
            <Text text="Resultado"/>
          </Column>
        </columns>
        <items>
          <ColumnListItem>
            <cells>
                <Text text="{code}" />
                <DatePicker
                placeholder="Ingresar fecha..."
                value="{fecha_real}"
                displayFormat="short"/>
                <DatePicker
                placeholder="Ingresar fecha..."
                value="{fecha_proy}"
                displayFormat="short"/>
                <Input value="{result}"/>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
    </Page>
</mvc:View>