                          icon="{pic}"
                          title="{title}"
                          type="{type}">
                      </unified:CalendarAppointment>
                    </intervalHeaders>
                  </PlanningCalendarRow>
                </rows>
              </PlanningCalendar>
            </VBox>
          </IconTabFilter>
                    <IconTabFilter text="Grupo A">
            <Table 
              id="TableGrupoA"
              growing="true"
              growingThreshold="30"
              inset="false"
              items="{path: '/'}"
              alternateRowColors="true"> 
              <columns>
                <Column>
                  <Text text="Descripción del Puesto"/>
                </Column>
                <Column>
                  <Text text="Apellidos y Nombres"/>
                </Column>
                <Column hAlign="End">
                  <Text text="Área"/>
                </Column>
              </columns>
              <items>
                <ColumnListItem>
                  <cells>
                    <Text text="{position}" />
                    <Text text="{name}" />
                     <Text text="{area}" />
