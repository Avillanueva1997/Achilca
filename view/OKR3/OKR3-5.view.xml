                    <intervalHeaders>
                      <unified:CalendarAppointment
                          startDate="{start}"
                          endDate="{end}"
                          icon="{pic}"
                          title="{title}"
                          type="{type}">
                      </unified:CalendarAppointment>
                    </intervalHeaders>
                  </PlanningCalendarRow>
                </rows>
              </PlanningCalendar>
            </VBox>
          </IconTabFilter>
          <IconTabFilter text="Mantto Mecánicos">
          <VBox class="sapUiSmallMargin">
              <PlanningCalendar
                  id="PC3"
                  showRowHeaders="false"
                  startDate="{path: '/startDate'}"
                  rows="{path: '/peopleThird'}"
                  appointmentsVisualization="Filled"
