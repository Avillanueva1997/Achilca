<mvc:View
	controllerName="sap.ui.app01.controller.SIG.SIG01-AE"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:unified="sap.ui.unified"
    xmlns:t="sap.ui.table"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls">
    <Page
        title= "Auditorías Externas"
        showNavButton="true"
        navButtonPress="onNavBack">
    <headerContent>
            <Button press="onAdd" tooltip="Añadir" icon="sap-icon://add"/>
            <Button press="onDelete" tooltip="Eliminar" icon="sap-icon://delete"/>
            <Button icon="sap-icon://save" tooltip="Guardar" press="onSave" />
  </headerContent>
    <content>
           <Table 
            id="TableData"
            growing="true"
            growingThreshold="30"
            inset="false"
            items="{path: '/'}"
            alternateRowColors="true"
            mode="MultiSelect"> 
        <columns>
          <Column width="5em">
            <Text text="Código"/>
          </Column>
          <Column				
            minScreenWidth="Tablet"
            demandPopin="true">
            <Text text="Fecha"/>
          </Column>
          <Column
            minScreenWidth="Tablet"
            demandPopin="true">
            <Text text="Auditoría Externa"/>
          </Column>
          <Column hAlign="End" width="10em">
            <Text text="Puntaje"/>
          </Column>
        </columns>
        <items>
          <ColumnListItem type="Navigation" press="onListItemPress">
            <cells>
              <Text text="{code}"/>
              <DatePicker
              placeholder="Ingrese fecha..."
              value="{fecha}"
              valueFormat="yyyy-MM-dd" displayFormat="long"/>
              <Input value="{auditoria}"/>
              <Input value="{nota}" type="Number"/>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
    </Page>
</mvc:View>