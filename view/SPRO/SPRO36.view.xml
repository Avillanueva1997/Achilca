<mvc:View
	controllerName="sap.ui.app01.controller.SPRO.SPRO36"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:u="sap.ui.unified"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page
      title="Destinatarios RP"
      id="SPRO36"
      showNavButton="true"
      navButtonPress="onNavBack"
      enableScrolling="true">
    <headerContent>
      <Button press="onAdd" tooltip="Añadir" icon="sap-icon://add"/>
      <Button press="onDelete" tooltip="Eliminar" icon="sap-icon://delete"/>
      <Button icon="sap-icon://save" tooltip="Guardar" press="onSave" />
    </headerContent>
    <content>
      <Table 
        id="TableSPRO36"
        growing="true"
        growingThreshold="30"
        inset="false"
        items="{path: '/'}"
        alternateRowColors="true"
        mode="MultiSelect"> 
        <columns>
            <Column width="5em">
                <Text text="Código"/>
            </Column>
            <Column
            minScreenWidth="Tablet"
            demandPopin="true">
                <Text text="Correo Electrónico" />
            </Column>
            <Column hAlign="End">
                <Text text="Usuario" />
            </Column>
        </columns>
        <items>
          <ColumnListItem>
            <cells>
                <Input value="{code}" enabled="false" />
                <Input value="{email}"/>
                <ComboBox items="{path: 'cbxUser>/', templateShareable:false}" selectedKey="{user}" width="100%">
                  <core:ListItem key="{cbxUser>code}" text="{cbxUser>nameComplete}"/>
                </ComboBox>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
    </Page>
</mvc:View>