<mvc:View
	controllerName="sap.ui.app01.controller.SPRO.SPRO11"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns:u="sap.ui.unified"
  xmlns:t="sap.ui.table"
  xmlns="sap.m">
    <Page
      title="Turno"
      id="SPRO11"
      showNavButton="true"
      navButtonPress="onNavBack"
      enableScrolling="true">
    <headerContent>
      <Button press="onAdd" tooltip="Añadir" icon="sap-icon://add"/>
      <Button press="onDelete" tooltip="Eliminar" icon="sap-icon://delete"/>
      <Button icon="sap-icon://save" tooltip="Guardar" press="onSave" />
    </headerContent>
    <content>
      <Table 
        id="TableSPRO11"
        growing="true"
        growingThreshold="30"
        inset="false"
        items="{path: '/'}"
        alternateRowColors="true"
        mode="MultiSelect"> 
        <columns>
          <Column width="5em">
            <Text text="Código"/>
          </Column>
          <Column>
            <Text text="Descripción" />
          </Column>
          <Column>
            <Text text="Hora inicio" />
          </Column>
          <Column hAlign="End">
            <Text text="Hora fin" />
          </Column>
        </columns>
        <items>
          <ColumnListItem>
            <cells>
              <Input value="{code}" enabled="false" maxLength="2" />
              <Input value="{description}"/>
              <TimePicker
              value="{start_time}"
              valueFormat="HH:mm"
              displayFormat="HH:mm"
              placeholder="Ingresa hora inicio!"/>
              <TimePicker
              value="{end_time}"
              valueFormat="HH:mm"
              displayFormat="HH:mm"
              placeholder="Ingresa hora fin!"/>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
    </Page>
</mvc:View>